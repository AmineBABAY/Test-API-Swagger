<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Pages test">

	<test name="Make requests on pages endpoint">
		<classes>
			<class name="com.arender.tests.PagesTest">
				<methods>
					<include name="uploadDocument" />
					<include name="getPageImageWithoutDescription" />
					<include name="getPageImageWithDescription" />
					<include name="getPageImageWithWrongIdDocument" />
					<include name="getPageImageWithWrongPage" />
				</methods>
			</class>

		</classes>
	</test>

	<test name="Make requests on the searchPageForTextPositions endpoint ">
		<classes>
			<class name="com.arender.tests.PagesTest">
				<methods>
					<include name="uploadDocument2" />
					<include name="searchOnDocumentWithText" />
					<include name="searchTextOnNoExistentPage" />
					<include name="searchOnDocumentWithoutText" />
					<include name="uploadDocumentwithWrongId" />
				</methods>
			</class>
		</classes>
	</test>

	<test name="Make requests on the getPagesSearchResult endpoint ">
		<classes>
			<class name="com.arender.tests.PagesTest">
				<methods>
					<include name="uploadDocument2" />
					<include name="PagesOfSearchResult" />
					<include name="PagesOfSearchResultOnDocumentWithoutText" />
					<include name="uploadDocumentwithWrongIdforsearchPages" />

				</methods>
			</class>
		</classes>
	</test>

	<test name="Make requests on the getTextPosition endpoint ">
		<classes>
			<class name="com.arender.tests.PagesTest">
				<methods>
					<include name="uploadDocument2" />
					<include name="positionTextOnDocumentWithText" />
					<include name="positionTextOnNoExistentPage" />
					<include name="positionTextOnDocumentWithoutText" />
					<include name="positionTextWithWrongId" />

				</methods>
			</class>
		</classes>
	</test>

</suite>